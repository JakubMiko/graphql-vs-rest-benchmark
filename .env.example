# GraphQL vs REST Benchmark - Environment Variables
# Copy this file to .env and update with your values

# Rails Secret Key Base
# Generate with: openssl rand -hex 64
SECRET_KEY_BASE=your_secret_key_base_here_generate_with_openssl_rand_hex_64

# Database Configuration (used by Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# InfluxDB Configuration
INFLUXDB_ADMIN_TOKEN=benchmark-admin-token-change-in-production
INFLUXDB_ORG=benchmark
INFLUXDB_BUCKET=k6

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Application Ports (default, can be changed if needed)
GRAPHQL_PORT=3000
REST_PORT=3001
POSTGRES_PORT=5432
REDIS_PORT=6379
INFLUXDB_PORT=8086
GRAFANA_PORT=3030
